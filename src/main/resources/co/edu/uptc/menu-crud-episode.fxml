<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<StackPane id="pane" prefHeight="500" prefWidth="500" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uptc.view.serie.episode.MenuEpisodeView">
    <children>
            <VBox id="vbox" spacing="10" alignment="CENTER">
                <Label styleClass="title" text=" EPISODE " style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

                <Label styleClass="title" text= "Click on the action you want to perform" style="-fx-font-size: 18px"/>
                <Button fx:id="createButton" text="Create Episode" onAction="#sceneCreate" />
                <Button fx:id="deleteButton" text="Delete Episode" onAction="#sceneDelete"/>
                <Button fx:id="updateButton" text="Update Episode" onAction ="#sceneUpdate"/>
                <Button fx:id="findButtonMain" text="Find Episode" onAction="#sceneFind"/>
                <Button fx:id="obtainAllButton" text="Obtain All Episode" onAction="#sceneObtainAll"/>
            </VBox>
    </children>
</StackPane>