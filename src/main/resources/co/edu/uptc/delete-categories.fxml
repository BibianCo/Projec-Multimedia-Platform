<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>

<StackPane id="pane" prefHeight="500" prefWidth="500" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uptc.view.categories.DeleteCategoryView">
    <children>
        <HBox spacing="20">
        
            <VBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER">
                <Label id="title" alignment="CENTER" text="Existing Categories"/>
                
                <children>
                    <TableView fx:id="tableView">
                        <columns>
                            <TableColumn text="id" fx:id="idColumn" />
                            <TableColumn text="Name" fx:id="nameColumn" />
                        </columns>
                    </TableView>
                </children>
                
            </VBox>

            <Separator orientation="VERTICAL"/>
            
           
            <VBox id="VBox" spacing="10" HBox.hgrow="ALWAYS">
                <Label id="title" text="Enter the id of the category you want to delete"/>
                <TextField fx:id="categoryId" promptText="Id Category" />
                <Label fx:id="messageError"/>
                <Button fx:id="deleteButton" text="Delete" onAction="#deleteCategory"/>
                <Button fx:id="backButton" text="Back" onAction="#sceneMenu"/>
            </VBox>
        </HBox>
    </children>
</StackPane>